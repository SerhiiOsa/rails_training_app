<%= form_with model: question do |form| %>
    <p>
      <%= form.label :body, 'Question text' %>
    </p>
    <p>
      <%= form.text_area :body, rows: 3, class: 'form-text-area' %>
    </p>
    <p class="mt">
      <%= form.label :user_id, 'User ID' %>
    </p>
    <p>
      <%= form.number_field :user_id, class: 'form-text-field' %>
    </p>
    <p class="mt">
      <%= form.submit 'Save', class: 'button button-main'%>
    </p>
  <% end %>