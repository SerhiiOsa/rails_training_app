<div class="container">
  <h2 class="title">Sign in</h2>

  <p class="mt">Please insert your email and password to sign in</p>

  <div class="mt">
    <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
      <p class="mt"><%= form.label :email, 'Your email' %></p>
      <p><%= form.text_field :email, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :password, 'Your password' %></p>
      <p><%= form.password_field :password, class: 'form-text-field' %></p>

      <p class="mt"><%= form.submit 'Sign in', class: 'button button-main' %></p>
    <% end %>
  </div>
</div>
